<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity Support.
    -->
    <changeSet id="20211210155219-1" author="jhipster">
        <createTable tableName="support">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="support_id" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="create_date" type="date">
                <constraints nullable="true" />
            </column>
            <column name="end_date" type="date">
                <constraints nullable="true" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="issue" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="is_refund" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="is_valid" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="refund_id" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="is_resolved" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="user_reply" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="support_reply" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->
</databaseChangeLog>
